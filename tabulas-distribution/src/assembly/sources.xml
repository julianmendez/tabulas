<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>sources</id>

	<baseDirectory>.</baseDirectory>

	<fileSets>

		<fileSet>
			<directory>${basedir}/../tabulas-core/src/main/scala/</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>

		<fileSet>
			<directory>${basedir}/../tabulas-core/src/main/java/</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>

		<fileSet>
			<directory>${basedir}/../tabulas-core/src/main/resources/</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>

		<fileSet>
			<directory>${basedir}/../tabulas-ext/src/main/scala/</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>

		<fileSet>
			<directory>${basedir}/../tabulas-ext/src/main/java/</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>

		<fileSet>
			<directory>${basedir}/../tabulas-ext/src/main/resources/</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>

	</fileSets>

</assembly>

